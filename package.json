{
  "name": "create-commands-mcp",
  "version": "1.1.7",
  "type": "module",
  "description": "Scaffolding tool for creating MCP servers that connect to Commands.com",
  "main": "dist/index.js",
  "bin": {
    "create-commands-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "audit": "npm audit --omit=dev",
    "prepublishOnly": "npm run build && node test-template.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "commands",
    "scaffolding",
    "cli",
    "template"
  ],
  "author": "Commands.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commands-com/create-commands-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/commands-com/create-commands-mcp/issues"
  },
  "homepage": "https://github.com/commands-com/create-commands-mcp#readme",
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "~9.2.12",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
